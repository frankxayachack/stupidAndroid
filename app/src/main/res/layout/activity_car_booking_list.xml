<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="vn.edu.fpt.pe_carbooking.app.CarBookingListActivity" android:id="@+id/ActCarBookingList">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvListingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MY REQUESTS INFORMATION" />

            <ListView
                android:id="@+id/lstCarBooking"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvListingTitle"
                android:choiceMode="singleChoice" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSumInfo"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lstCarBooking"
                    android:text="Sum. info" />

                <EditText
                    android:id="@+id/edSumInfo"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSumInfo"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lstCarBooking"
                    android:text="Ans. Date" />

                <EditText
                    android:id="@+id/edAnsDate"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="41dp"
                    android:layout_height="37dp"
                    android:src="@android:drawable/ic_menu_my_calendar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Status" />

                <EditText
                    android:id="@+id/edStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:singleLine="true" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
